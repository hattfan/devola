<% include ./partials/header.ejs %>
<link rel="stylesheet" href="css/register.css">

    <!-- Register Page -->
    <div class="container">
        <div class="register">
            <form action="/resultat" method="POST">
                <h1>Lag 1</h1>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Hur många mål gjorde lag 1</label>
                    <input type="number" class="form-control" name="goalTeam1" required>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect11">Spelare 1</label>
                    <select class="form-control" name="player1Team1" required>
                        <option></option>
                        <% data.forEach(spelare => {%>
                        <option><%= spelare.Spelare %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect12">Spelare 2</label>
                    <select class="form-control" name="player2Team1" required>
                        <option></option>
                        <% data.forEach(spelare => {%>
                            <option><%= spelare.Spelare %></option>
                        <% }) %>                    </select>
                </div>
                <hr>
                <h1>Lag 2</h1>
                <div class="form-group">
                    <label for="exampleFormControlInput2">Hur många mål gjorde lag 2</label>
                    <input type="number" class="form-control" name="goalTeam2" required>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect21">Spelare 1</label>
                    <select class="form-control" name="player1Team2" required>
                        <option></option>
                        <% data.forEach(spelare => {%>
                            <option><%= spelare.Spelare %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="exampleFormControlSelect22">Spelare 2</label>
                    <select class="form-control" name="player2Team2" required>
                            <option></option>
                        <% data.forEach(spelare => {%>
                            <option><%= spelare.Spelare %></option>
                            <% }) %>
                    </select>
                </div>
                <br>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block">Lägg in Resultat</button>
                </div>

            </form>
        </div>
    </div>
    <!-- //Register Page -->

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>