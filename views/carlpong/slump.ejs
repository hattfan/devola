<!-- Register Page -->
<div class="container">
    <div class="register" style="text-align:center">

        <div id="slump" class="slump">
        </div>
        <script>
        fetch('../carlpong/nyaslumpengetplayers',{credentials: 'same-origin'})
            .then(
                function (response) {
                    if (response.status !== 200) {
                        console.log('Looks like there was a problem. Status Code: ' +
                            response.status);
                        return;
                    }
                    
                    // Examine the text in the response
                    response.json().then(function (data) {
                        console.log(data)
                    
                    var players= [];
                    data.forEach(row => {
                        if(row.Aktiv === true) players.push("<p style='text-align:center' class='btn btn-primary btn-md'>" + row.Spelare + "</p><br>")
                    })
                    console.log(players)
            
                        var ranNums = shuffle(players);
                        document.getElementById("slump").innerHTML = ranNums;
                        
                    });
                }
            )
            .catch(function (err) {
                console.log('Fetch Error :-S', err);
            });

            function shuffle(array) {
                var i = array.length,
                    j = 0,
                    temp;
    
                while (i--) {
    
                    j = Math.floor(Math.random() * (i + 1));
    
                    // swap randomly chosen element with current element
                    temp = array[i];
                    array[i] = array[j];
                    array[j] = temp;
    
                }

            return array;
        }
            
        </script>
        <hr>
        <input type="button" class="btn btn-primary btn-block" value="Slumpa om" onClick="window.location.reload()">
    </div>
</div>
